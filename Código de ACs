PARTE IVAN MORE
--29)
select * from TB_PRODUTO where COD_PRODUTO like '__A'

--30)
select * from TB_PEDIDO where DATA_EMISSAO < '2016-01-01'

--31)
select * from TB_PEDIDO where DATA_EMISSAO between '2016-01-01' and '2016-06-30'

--32)
select * from TB_PEDIDO where (DATA_EMISSAO between '2016-01-01' and '2016-01-31') or  (DATA_EMISSAO between'2016-06-01' and  '2016-06-30')

--33)
select * from TB_PEDIDO where (CODVEN = 1) and (DATA_EMISSAO between '2016-01-01' and '2016-01-31')

--34)
select DISTINCT CODCLI from TB_PEDIDO where  DATA_EMISSAO between '2016-01-01' and '2016-01-31' order by CODCLI


--35)

SELECT COD_PRODUTO, DESCRICAO, PRECO_CUSTO, PRECO_VENDA,(PRECO_VENDA - PRECO_CUSTO) AS LUCRO_UNITARIO, (100*(PRECO_VENDA-PRECO_CUSTO)/PRECO_CUSTO) AS PERCENTUAL
into RA1801215.dbo.exer5
FROM TB_PRODUTO
WHERE PRECO_CUSTO > 0
