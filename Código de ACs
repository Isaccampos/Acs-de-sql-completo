PARTE MENINO RAFA
USE PEDIDOS;

--LISTA DA TABELA DE PRODUTOS, (CODIGO DO PRODUTO, DESCRICAO, PRECO DE CUSTO, PRECO DE VENDA E LUCRO)
--(PRECO_VENDA - PRECO_CUSTO)
SELECT COD_PRODUTO, DESCRICAO, PRECO_CUSTO, PRECO_VENDA, PRECO_VENDA - PRECO_CUSTO AS LUCRO_UNITARIO 
FROM TB_PRODUTO;

--LISTA DA TABELA DE PRODUTOS, (CODIGO DO PRODUTO, DESCRIÃ‡AO, E TOTAL INVESTIDO)
--(QTD_REAL* PRECO_CUSTO)
SELECT COD_PRODUTO, DESCRICAO, QTD_REAL * PRECO_CUSTO AS TOTAL_INVESTIDO
FROM TB_PRODUTO

--LISTA DA TABELA ITENSPEDIDO, (NUM_PEDIDO, NUM_ITEM, COD_PRODUTO, PR_UNITARIO, QUANTIDADE, DESCONTO)
--(PR_UNITARIO * QUANTIDADE / 100 )
SELECT NUM_PEDIDO, NUM_ITEM, COD_PRODUTO, PR_UNITARIO, QUANTIDADE, DESCONTO,(PR_UNITARIO*QUANTIDADE)-DESCONTO/100 AS VALOR_ITEM
FROM TB_ITENSPEDIDO


--LISTA DA TABELA PRODUTOS, (COD_PRODUTO, DESCRICAO, PRECO_CUSTO, PRECO_VENDA,LUCRO UNITARIO)
--(LUCRO UNITARIO = (QTD_REAL( PRECO_VENDA-PRECO_CUSTO))
SELECT COD_PRODUTO, DESCRICAO, PRECO_CUSTO, PRECO_VENDA, QTD_REAL*(PRECO_VENDA-PRECO_CUSTO) AS LUCRO_ESTIMADO
FROM TB_PRODUTO

SELECT COD_PRODUTO, DESCRICAO, PRECO_CUSTO, PRECO_VENDA,(PRECO_VENDA - PRECO_CUSTO) AS LUCRO_UNITARIO, (100*(PRECO_VENDA-PRECO_CUSTO)/PRECO_CUSTO) AS PERCENTUAL
FROM TB_PRODUTO
WHERE PRECO_CUSTO > 0


--LISTA TABELA PRODUTOS, criando campo calculado 
SELECT QTD_REAL - QTD_MINIMA AS CAMPO_CALCULADO FROM TB_PRODUTO
WHERE QTD_REAL < QTD_MINIMA 



PARTE ISAC

--- PASSO 8 QTD_REAL ACIMA DE 5000
SELECT * FROM TB_PRODUTO
WHERE QTD_REAL > 5000

--- PASSO 9 PRECO_VENDA ACIMA DE 0,50
SELECT * FROM TB_PRODUTO
WHERE PRECO_VENDA > 0.50

-- PASSO 10 TABELA PEDIDOS COM VALOR TOTAL ACIMA DE 15 MIL
SELECT * FROM TB_PEDIDO
WHERE VLR_TOTAL > 1500000

-- PASSO 11 LISTANDO QTD_REAL MAIOR QUE 500 E MENOR QUE 1000
SELECT * FROM TB_PRODUTO
WHERE QTD_REAL > 500 AND QTD_REAL < 1000

-- PASSO 12 LISNTANDO VLR_TOTAL MAIOR QUE 15 MIL E MENOR QUE 25 MIL
SELECT * FROM TB_PEDIDO
WHERE VLR_TOTAL > 1500000 AND VLR_TOTAL < 2500000

-- PASSO 13 LISTANDO QTD_REAL ACIMA DE 5 MIL E COD_TIPO IGUAL A 6
SELECT * FROM TB_PRODUTO
WHERE QTD_REAL > 5000 AND COD_TIPO = 6 

-- PASSO 14 LISTANDO QTD_REAL ACIMA DE 5 MIL OU COD_TIPO IGUAL A 6
SELECT * FROM TB_PRODUTO
WHERE QTD_REAL > 5000 OR COD_TIPO = 6









PARTE GETSAM
--EX 15
SELECT * FROM TB_PEDIDO 
WHERE VLR_TOTAL NOT BETWEEN 100 AND 100000
ORDER BY VLR_TOTAL;

--EX 16
SELECT * FROM TB_PRODUTO
WHERE QTD_REAL < 500 OR QTD_REAL > 1000
ORDER BY QTD_REAL; 

--EX 17
SELECT * FROM TB_CLIENTE
WHERE ESTADO = 'SP'
ORDER BY NOME;

--EX 18
SELECT * FROM TB_CLIENTE
WHERE ESTADO IN ('RJ','MG')
ORDER BY ESTADO;

--EX 19
SELECT * FROM TB_CLIENTE
WHERE ESTADO IN ('SP','RJ','MG')
ORDER BY ESTADO;

--EX 20
SELECT * FROM TB_VENDEDOR
WHERE NOME LIKE 'LEIA';

--EX 21
SELECT * FROM TB_CLIENTE
WHERE NOME LIKE 'BRINDES%';



PARTE SHIPPS
